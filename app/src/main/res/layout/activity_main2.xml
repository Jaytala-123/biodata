                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="2"
                android:text=" : "
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />


        </LinearLayout>

